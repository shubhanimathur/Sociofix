<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/border1"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/home"

            android:drawableBottom="@drawable/ic_baseline_home_24"
            android:drawableTint="@color/my_dark_grey"
            android:textSize="8dp"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            android:fontFamily="sans-serif"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/drives"
            android:drawableTint="@color/my_dark_grey"
            android:drawableBottom="@drawable/ic_baseline_drive_24"

            android:textSize="8dp"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:id="@+id/add_post"
            android:drawableBottom="@drawable/ic_baseline_add_24"

            android:textSize="8dp"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:drawableTint="@color/my_dark_grey"
            android:fontFamily="sans-serif"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/notification"
            android:drawableBottom="@drawable/ic_baseline_notifications_24"
            android:gravity="center_vertical"
            android:drawableTint="@color/my_dark_grey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/profile_tab"
            android:drawableBottom="@drawable/ic_baseline_person_24"
            android:gravity="center_vertical"
            android:drawableTint="@color/my_dark_grey" />


    </LinearLayout>
</LinearLayout>


