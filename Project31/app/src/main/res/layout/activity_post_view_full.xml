<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".post.PostViewFull"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:background="@color/theme_pastel"
            android:layout_weight="7"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:text="SocioFix"
                android:fontFamily="@font/permanent_marker"
                android:paddingLeft="10dp"
                android:textColor="@color/light_white"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />


        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/idNestedSV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:elevation="8dp"
                app:cardCornerRadius="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"


                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/border1"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <RelativeLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"

                            >

                            <!-- Circular Image View  -->
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_3"
                                app:civ_border_color="@color/theme_pastel"
                                app:civ_border_width="2dp" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="80"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"

                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:weightSum="100"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="70"

                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:weightSum="100">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="40"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingRight="20dp"
                                    android:scrollHorizontally="true"
                                    android:text="Name"
                                    android:textSize="14dp" />

                                <include
                                    android:id="@+id/status"
                                    layout="@layout/accept_reject"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="60" />


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"


                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:weightSum="100"

                        >

                        <TextView
                            android:id="@+id/locationTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:text="Location: "
                            android:textAlignment="gravity"

                            android:textColor="#ACAAAA"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:drawableLeft="@drawable/ic_location1"
                            android:drawablePadding="4dp"
                            android:drawableTint="@color/my_dark_grey"

                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"


                            android:text="Pune City: Karve Nagar"
                            android:textAlignment="gravity"
                            android:textSize="8dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="2dp"

                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DBDBDB" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"

                            ></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:paddingTop="5dp"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/sectorTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="20"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:scrollHorizontally="true"
                            android:text="Sector: "
                            android:textAlignment="gravity"
                            android:textColor="#ACAAAA"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sector"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:drawableLeft="@drawable/ic_sector1"
                            android:drawablePadding="3dp"
                            android:drawableTint="@color/my_dark_grey"

                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"


                            android:text="Animal Welfare"
                            android:textAlignment="gravity"
                            android:textSize="8dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="2dp"

                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DBDBDB" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"

                            ></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:paddingTop="5dp"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/timeTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:text="Time: "
                            android:textAlignment="gravity"
                            android:textColor="#ACAAAA"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time"

                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:drawableLeft="@drawable/ic_time1"
                            android:drawablePadding="3dp"


                            android:drawableTint="@color/my_dark_grey"
                            android:fontFamily="sans-serif"

                            android:gravity="center_vertical"

                            android:text="Not Specified"
                            android:textAlignment="gravity"
                            android:textSize="8dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="2dp"

                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DBDBDB" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"

                            ></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/postImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:paddingBottom="2dp"
                                android:src="@drawable/default_img3" />
                            <!--                            android:src="@drawable/img_1"-->
                            <ProgressBar
                                android:id="@+id/loadingImg"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true">

                            </ProgressBar>

                            <ImageView
                                android:id="@+id/blurImage"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_blur"
                                android:visibility="gone" />
                        </RelativeLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="3dp"
                        android:paddingVertical="15dp"
                        android:text="This is description"
                        android:textSize="9dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="fill_horizontal"

                        android:background="@drawable/border"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/upvotes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:drawableLeft="@drawable/ic_upvote_false"
                            android:drawablePadding="3dp"

                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="1580"
                            android:textAlignment="gravity"
                            android:textSize="8dp" />



                        <TextView
                            android:id="@+id/save"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:drawableLeft="@drawable/ic_save"
                            android:drawablePadding="3dp"

                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="Save"
                            android:textAlignment="gravity"
                            android:textSize="8dp" />

                        <TextView
                            android:id="@+id/comments"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:drawablePadding="3dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"

                            android:textAlignment="gravity"
                            android:textSize="8dp" />


                        <TextView
                            android:id="@+id/blank"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:textAlignment="gravity"
                            android:textSize="8dp"
                            android:textStyle="bold"


                            />
                        <!--            <TextView-->

                        <!--                android:id="@+id/helpOrAccept"-->
                        <!--                android:text="Help"-->
                        <!--                android:layout_width="0dp"-->
                        <!--                android:layout_height="match_parent"-->
                        <!--                android:layout_weight="15"-->
                        <!--                android:backgroundTint="@android:color/white"-->
                        <!--            android:textAllCaps="false"-->
                        <!--                android:gravity="center"-->
                        <!--                android:textSize="12dp"-->
                        <!--                android:drawableLeft="@drawable/ic_help"-->
                        <!--                android:fontFamily="sans-serif"/>-->


                        <Button
                            android:id="@+id/helpOrAccept"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@color/theme_pastel"
                            android:backgroundTint="@color/theme_pastel"
                            android:drawableLeft="@drawable/ic_help"
                            android:drawableTint="@color/light_white"
                            android:textColor="@color/light_white"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:text="Help"
                            android:textAllCaps="false"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/time_created_at"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom|right"
                        android:maxLines="1"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp"
                        android:scrollHorizontally="true"
                        android:text="23-5-23 11:11:11"
                        android:textAlignment="gravity"
                        android:textSize="8dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/bottom_navigation"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />



    </LinearLayout>



</RelativeLayout>


