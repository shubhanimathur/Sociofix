<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchOrganization.SearchOrganization"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:weightSum="100"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="2dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:weightSum="100"
            android:background="@color/theme_pastel"
            android:orientation="horizontal"
            >

            <TextView
                android:paddingVertical="1.5dp"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:paddingLeft="19dp"
                android:layout_margin="4dp"

                android:text="Organizations"
                android:textColor="@color/light_white"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:gravity="center"

                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DBDBDB"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"

                >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:weightSum="100"
            android:layout_margin="4dp"
            android:paddingHorizontal="7dp"
            android:orientation="vertical"
            android:paddingVertical="1.5dp">


            <SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_border"
                android:iconifiedByDefault="false"
                android:queryHint="Search"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                android:backgroundTint="@color/grey"
                android:textSize="10dp"
                android:theme="@style/SearchViewStyle"
                android:textColor="@color/my_dark_grey"
                android:inputType="text"/>


        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/idNestedSV"
            android:layout_weight="81"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <!--linear layout for displaying
                our recycler view-->




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--recycler view for displaying our list of data
                    and we are making nested scroll for our
                    recycler view as false-->

                <!--we are adding progress bar
                    for the purpose of loading-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/idRVOrganization"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/following_user" />

                <ProgressBar
                    android:id="@+id/idPBLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/bottom_navigation"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="45dp"

        android:backgroundTint="@color/theme_pastel"
        android:backgroundTintMode="src_in"
        android:clickable="true"
        app:srcCompat="@drawable/ic_filter"
        />
</RelativeLayout>