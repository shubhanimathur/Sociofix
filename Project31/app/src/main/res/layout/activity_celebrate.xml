<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:weightSum="100"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="2dp"
            android:paddingHorizontal="10dp"
            android:background="@color/theme_pastel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:weightSum="100"
            android:orientation="horizontal"
            android:paddingVertical="1.5dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:textColor="@color/light_white"
                android:text="Cheers to Greatness!"

                android:textStyle="bold"
                android:drawablePadding="8dp"

                android:gravity="center"

                />


        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/idNestedSV"
            android:layout_weight="88"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:focusableInTouchMode="true"
            tools:context=".celebrate.Celebrate">

            <!--linear layout for displaying
                our recycler view-->




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--recycler view for displaying our list of data
                    and we are making nested scroll for our
                    recycler view as false-->

                <!--we are adding progress bar
                    for the purpose of loading-->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    app:tabGravity="fill"
                    app:tabTextColor="#7D7D7D"
                    app:tabTextAppearance="@style/CustomTabTextAppearance"
                    app:tabMode="fixed">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tabPopular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power Users"
                        app:textAllCaps="false"
                        />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tabLocality"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Super Organizations" />



                </com.google.android.material.tabs.TabLayout>


                <include

                    layout="@layout/top_performers"
                    android:id="@+id/top_performer1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:visibility="gone"
                    android:layout_weight="5" />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />
                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />

                <include
                    layout="@layout/top_performers"
                    android:id="@+id/top_performer10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"

                    android:layout_weight="5"
                    />





            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/bottom_navigation"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />


    </LinearLayout>

</RelativeLayout>