<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="2dp"
        android:paddingHorizontal="10dp"
        android:background="@color/theme_pastel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="100"
        android:orientation="horizontal"
        android:paddingVertical="1.5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="match_parent"
android:textColor="@color/light_white"
            android:text="SocioFix Posts"
           android:textStyle="bold"
android:paddingLeft="30dp"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/mymenu"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:textColor="@color/light_white"
            android:text="SocioFix Posts"
            android:drawableEnd="@drawable/ic_menu1"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:gravity="center"

            />


    </LinearLayout>
<androidx.core.widget.NestedScrollView
    android:id="@+id/idNestedSV"
    android:layout_weight="88"
android:layout_width="match_parent"
android:layout_height="0dp"
tools:context=".homePage.HomePage">

<!--linear layout for displaying
    our recycler view-->




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--recycler view for displaying our list of data
        and we are making nested scroll for our
        recycler view as false-->

        <!--we are adding progress bar
            for the purpose of loading-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            app:tabGravity="fill"
            app:tabTextColor="#7D7D7D"
            app:tabTextAppearance="@style/CustomTabTextAppearance"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                app:textAllCaps="false"
                />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabLocality"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locality" />



        </com.google.android.material.tabs.TabLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVPosts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/post_item1" />

        <ProgressBar
        android:id="@+id/idPBLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    </LinearLayout>



</androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        />


</LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="45dp"

        android:backgroundTint="@color/theme_pastel"
        android:backgroundTintMode="src_in"
        android:clickable="true"
        app:srcCompat="@drawable/ic_filter" />
</RelativeLayout>