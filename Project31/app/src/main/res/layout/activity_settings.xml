<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"



    tools:context=".settings.Settings">
    <TextView
        android:id="@+id/signup_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/theme_pastel"
        android:layout_weight="7"
        android:gravity="center"
        android:text="Settings"
        android:textColor="@color/light_white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:paddingHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center"
        android:layout_weight="93"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="100"

            android:layout_weight="35"
            >
            <TextView
                android:id="@+id/Account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Account"
                android:layout_weight="20"

                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Personal Details"
                android:layout_weight="20"


                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />


            <TextView
                android:id="@+id/password_security"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Password and Security"
                android:layout_weight="20"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/permissions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Permissions"
                android:layout_weight="20"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Logout"
                android:layout_weight="20"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="100"

            android:layout_weight="28"
            >
            <TextView
                android:id="@+id/information_support"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:text="Information and Support"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Help"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="About Us"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/faq"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="FAQs"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="100"

            android:layout_weight="28"
            >

            <TextView
                android:id="@+id/actvity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Activity"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/your_posts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Your Posts"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/saved_posts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Saved Posts"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/upvoted_posts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Upvoted Posts"
                android:layout_weight="25"
                android:paddingHorizontal="4dp"
                android:textColor="@color/my_dark_grey"
                android:textSize="15dp"
                android:gravity="center_vertical"
                />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>



