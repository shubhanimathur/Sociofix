<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project31" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->


        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Project31.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>


    <style name="Theme.Project31.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Project31.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">15dp</item> <!-- Define your desired text size here -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyButton1Style" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#222222</item> <!-- Set the background color for button 1 -->
        <item name="android:textColor">#ffffff</item> <!-- Set the text color for button 1 -->
    </style>

    <style name="MyButtonPastelStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/theme_pastel</item> <!-- Set the background color for button 1 -->
        <item name="android:textColor">@color/light_white</item> <!-- Set the text color for button 1 -->
    </style>

    <style name="MyLightButtonPastelStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/theme_pastel_light</item> <!-- Set the background color for button 1 -->
        <item name="android:textColor">@color/white</item> <!-- Set the text color for button 1 -->
    </style>



</resources>